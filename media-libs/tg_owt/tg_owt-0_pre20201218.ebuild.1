EAPI=7

inherit cmake flag-o-matic unpacker

TG_OWT_COMMIT="6eaebec41b34a0a0d98f02892d0cfe6bbcbc0a39"
LIBYUV_COMMIT="dfaf7534e0e536f7e5ef8ddd7326797bd09b8622"
LIBVPX_COMMIT="3a38edea2cd114d53914cab017cab2e43a600031"

DESCRIPTION="WebRTC build for Telegram"
HOMEPAGE="https://github.com/desktop-app/tg_owt"
SRC_URI="https://github.com/desktop-app/tg_owt/archive/${TG_OWT_COMMIT}.tar.gz -> ${P}.tar.gz
	https://chromium.googlesource.com/libyuv/libyuv/+archive/${LIBYUV_COMMIT}.tar.gz -> libyuv-0_pre20201203.tar.gz
	https://chromium.googlesource.com/webm/libvpx.git/+archive/${LIBVPX_COMMIT}.tar.gz -> libvpx-1.9.0_p20201218.tar.gz
"
LICENSE="BSD"
SLOT="0"
KEYWORDS="amd64"
IUSE="pulseaudio"

# some things from this list are bundled
# work on unbundling in progress
DEPEND="
	dev-libs/openssl:=
	dev-libs/protobuf:=
	media-libs/alsa-lib
	media-libs/libjpeg-turbo:=
	media-libs/openh264:=
	media-libs/opus
	media-video/ffmpeg:=
	!pulseaudio? ( media-sound/apulse[sdk] )
	pulseaudio? ( media-sound/pulseaudio )
"

RDEPEND="${DEPEND}"

BDEPEND="
	virtual/pkgconfig
	amd64? ( dev-lang/yasm )
"

S="${WORKDIR}/${PN}-${TG_OWT_COMMIT}"

src_unpack() {
	pwd
	unpack ${P}.tar.gz
	pwd
	pushd ${PN}-${TG_OWT_COMMIT} > /dev/null
	pushd src/third_party/libyuv > /dev/null
	pwd
	unpack libyuv-0_pre20201203.tar.gz
	popd > /dev/null
	pwd
	pushd src/third_party/libvpx/source/libvpx > /dev/null
	pwd
	unpack libvpx-1.9.0_p20201218.tar.gz
	popd > /dev/null
	pwd
	popd > /dev/null
}

src_configure() {
	# lacks nop, can't restore toc
	append-flags '-fPIC'
	local mycmakeargs=(
		-DBUILD_SHARED_LIBS=TRUE
		-DTG_OWT_PACKAGED_BUILD=TRUE
		-DTG_OWT_USE_PROTOBUF=TRUE
	)
	cmake_src_configure
}
