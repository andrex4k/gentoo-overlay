<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE pkgmetadata SYSTEM "http://www.gentoo.org/dtd/metadata.dtd">
<pkgmetadata>
  <maintainer type="person">
    <email>mva@gentoo.org</email>
    <description>Also, you can find me on IRC (FreeNode) as mva, or in Telegram as @mva_name</description>
    <name>Vadim A. Misbakh-Soloviov</name>
  </maintainer>
  <longdescription>Telegram Desktop Client</longdescription>
  <use>
    <flag name="connman">Enable "connman" (<pkg>net-misc/connman</pkg>) QtNetwork backend</flag>
    <flag name="crash-report">Enable Crash Reporter</flag>
    <flag name="custom-api-id">Use custom API ID and API HASH (you must set it either in make.conf or `/etc/portage/env/{CAT}/{PN}`)</flag>
    <flag name="gtk-file-dialog">Force GTK file dialog (instead of Qt one)</flag>
    <flag name="gtk2">Enable gtk+-2 integrations</flag>
    <flag name="gtk3">Enable gtk+-3 integrations</flag>
    <flag name="gnome">Enable GNOME integrations</flag>
    <flag name="ibus">Enable ibus Input system Qt Plugin support</flag>
    <flag name="kde">Enable KDE integrations (actually, just prevent enabling gtk/gnome ones and qt5ct)</flag>
    <flag name="libcxx">Build with <pkg>sys-devel/libcxx</pkg> as sdtlib</flag>
    <!--flag name="lto">Use Link Time Optimization. Most probably it will be useless for you. Eats ~20GB RAM, longer build time.</flag-->
    <flag name="networkmanager">Enable "networkmanager" (<pkg>net-misc/networkmanager</pkg>) QtNetwork backend</flag>
    <flag name="plasma">Enable KDE integrations (actually, just prevent enabling gtk/gnome ones and qt5ct)</flag>
    <flag name="openal-eff">Use openal effects (like doubling playspeed)</flag>
    <flag name="qt5ct">Enable Qt5ct integrations</flag>
    <!--flag name="system-fonts">Drop internal fonts resource file (so Tg will use font that you've setup system-wide instead)</flag-->
    <flag name="wide-baloons">Apply custom patch to make text baloons in chat journal follow longest line width on adaptive widescreen layout, instead of using short ones and keep tons of empty space.</flag>
  </use>
  <upstream>
    <remote-id type="github">telegramdesktop/tdesktop</remote-id>
    <bugs-to>https://github.com/telegramdesktop/tdesktop/issues</bugs-to>
  </upstream>
</pkgmetadata>
